{
  "name": "ru.perfectdaemon.ts.game",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "webpack-dev-server": "webpack-dev-server --open",
    "webpack-build": "webpack --env.production",

    "start:garbage": "npm run webpack-dev-server -- --env.game=garbage-game",
    "start:rpg": "npm run webpack-dev-server -- --env.game=rpg-game",
    "start:virus": "npm run webpack-dev-server -- --env.game=virus-game",
    "start:template": "npm run webpack-dev-server -- --env.game=template-game",

    "start:tools": "npm run webpack-dev-server -- --env.tools",

    "build:garbage": "npm run webpack-build -- --env.game=garbage-game",
    "build:rpg": "npm run webpack-build -- --env.game=rpg-game",
    "build:virus": "npm run webpack-build -- --env.game=virus-game",
    "build:template": "npm run webpack-build -- --env.game=template-game",

    "build:tools": "npm run webpack-build -- --env.tools"
  },
  "private": true,
  "devDependencies": {
    "copy-webpack-plugin": "5.1.1",
    "ts-loader": "6.2.2",
    "tslint": "6.1.1",
    "typescript": "3.8.3",
    "webpack": "4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
